<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragments.MovieDetailsFragment">

    <ImageView
        android:id="@+id/movie_details_poster_iv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/ic_image_place_holder" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:id="@+id/movie_details_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/black"
            android:textStyle="bold|italic"
            tools:text="@string/lorem_ipsum_short" />

        <TextView
            android:id="@+id/movie_details_overview_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            tools:text="@string/lorem_ipsum_long" />

        <ImageView
            style="?android:borderlessButtonStyle"
            android:id="@+id/star_btn_iv"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_empty_star"
            android:layout_width="70dp"
            android:layout_height="70dp"/>

    </LinearLayout>

</LinearLayout>